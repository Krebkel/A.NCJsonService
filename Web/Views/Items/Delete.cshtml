@model Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h1>Delete Item</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>
        <dt class="col-sm-2">
            Ware
        </dt>
        <dd class="col-sm-10">
            @Model.Ware.Name
        </dd>
        <dt class="col-sm-2">
            Order
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Number
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>