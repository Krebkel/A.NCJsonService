@model Models.Item

@{
    ViewData["Title"] = "Create Item";
}

<h1>Create Item</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ware.Id" class="control-label">Ware</label>
                <select asp-for="Ware.Id" class="form-control" asp-items="ViewBag.Wares">
                    <option value="">-- Select Ware --</option>
                </select>
                <span asp-validation-for="Ware.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Id" class="control-label">Order</label>
                <select asp-for="Order.Id" class="form-control" asp-items="ViewBag.Orders">
                    <option value="">-- Select Order --</option>
                </select>
                <span asp-validation-for="Order.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>