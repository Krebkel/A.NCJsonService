@model Models.Item

@{
    ViewData["Title"] = "Item Details";
}

<h1>Item Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Model.Number
        </dd>
        <dt class="col-sm-2">
            Ware
        </dt>
        <dd class="col-sm-10">
            @Model.Ware.Name
        </dd>
        <dt class="col-sm-2">
            Order
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Number
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>