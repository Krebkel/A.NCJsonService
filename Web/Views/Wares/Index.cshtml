@model IEnumerable<Models.Ware>

@{
    ViewData["Title"] = "Wares";
}

<h1>Wares</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
            <th>Property</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var ware in Model)
    {
        <tr>
            <td>@ware.Name</td>
            <td>@ware.Value</td>
            <td>@ware.Property</td>
            <td>
                <a asp-action="Edit" asp-route-id="@ware.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@ware.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@ware.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>